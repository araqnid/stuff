#!/bin/sh

set -e

cd "$(dirname $0)"
if [ -z "$NO_REBUILD" ]; then
    if [ -f .build_number ]; then
	BUILD_NUMBER=$(expr $(cat .build_number) + 1)
    else
	BUILD_NUMBER=1
    fi
    echo $BUILD_NUMBER > .build_number
    export BUILD_NUMBER
    gradle clean build
else
    BUILD_NUMBER=$(cat .build_number)
fi

tmpdir=$(mktemp -d)
trap 'rm -rf "$tmpdir"' EXIT

artifact=stuff

mkdir $tmpdir/packages $tmpdir/service
ln -sfn $PWD/build/libs/$artifact-0.0.$BUILD_NUMBER.jar $tmpdir/packages/$artifact-0.0.$BUILD_NUMBER.jar
ln -sfn $PWD/mount_service $tmpdir/packages/$artifact-0.0.$BUILD_NUMBER.sh
ln -sfn $PWD/run_service $tmpdir/service/run

tar --dereference -C $tmpdir -c -f - packages service | ssh harvestman "sudo -u $artifact-jadm sh -c 'cd /srv/$artifact-japp && tar -x -v -f - && artifact=$artifact BUILD_NUMBER=$BUILD_NUMBER packages/$artifact-0.0.$BUILD_NUMBER.sh && sudo -u $artifact-jusr svc -t service'"
